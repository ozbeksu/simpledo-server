{
  "name": "server",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@graphql-codegen/typescript": "^3.0.3",
    "@graphql-codegen/typescript-resolvers": "^3.2.0",
    "@graphql-tools/graphql-file-loader": "^7.5.16",
    "@graphql-tools/load": "^7.8.13",
    "@graphql-tools/merge": "^8.4.0",
    "@graphql-tools/schema": "^9.0.17",
    "apollo-server": "^3.12.0",
    "apollo-server-core": "^3.12.0",
    "apollo-server-express": "^3.12.0",
    "argon2": "^0.30.3",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "graphql-middleware": "^6.1.33",
    "graphql-shield": "^7.6.5",
    "jsonwebtoken": "^9.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.12",
    "typeorm-extension": "^2.7.0",
    "typeorm-seeding": "^1.6.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@graphql-codegen/cli": "^3.3.0",
    "@types/express": "^4.17.17",
    "@types/faker": "^6.6.9",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/node": "^18.15.11",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "concurrently": "^8.0.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.7",
    "ts-node": "10.7.0",
    "typescript": "4.5.2"
  },
  "scripts": {
    "build": "tsc -p .",
    "start": "ts-node src/index.ts",
    "test": "echo 'no server-side tests yet'",
    "codegen": "yarn graphql-codegen",
    "clean": "yarn rimraf dist",
    "dev": "yarn concurrently 'yarn nodemon' 'tsc --watch --preserveWatchOutput' -n node,ts -c green.bgBlack,white.bgBlue",
    "entity:create": "ts-node ./node_modules/.bin/typeorm entity:create -n",
    "migrate:generate": "ts-node ./node_modules/.bin/typeorm migration:generate -d src/db/dataSource.ts",
    "migrate:run": "ts-node ./node_modules/.bin/typeorm migration:run -d src/db/dataSource.ts",
    "migrate:revert": "ts-node ./node_modules/.bin/typeorm migration:revert -d src/db/dataSource.ts",
    "schema:drop": "ts-node ./node_modules/.bin/typeorm schema:drop -d src/db/dataSource.ts",
    "schema:sync": "ts-node ./node_modules/.bin/typeorm schema:sync -d src/db/dataSource.ts",
    "seed:run": "ts-node ./node_modules/typeorm-extension/dist/cli/index.js seed",
    "db:refresh": "yarn migrate:generate ./src/db/migration/create_tables && yarn migrate:run && yarn seed:run"
  }
}
